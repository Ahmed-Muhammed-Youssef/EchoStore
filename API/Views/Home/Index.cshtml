@model IReadOnlyList<ProductInfo>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach(var item in Model)
    {

        <div class="col-md-6 col-lg-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title">
                                @item.Name
                                @if (User.Identity!.IsAuthenticated && User.IsInRole(UserRolesValues.Admin))
                                {
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item?.Id">
                                        <i class="bi bi-pencil-square"></i>
                                        Edit
                                    </a>
                                }
                            </h5>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="~/@item?.PictureUrl" class="img-fluid" alt="product picture">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item?.Description</p>
                            <p class="card-text"><b>Type: </b>@item?.ProductType.Name.ToString()</p>
                            <p class="card-text"><b>Available: </b>@item?.AvailableAmount</p>
                            <p class="card-text"><b>Rate: </b>@item?.Rate</p>
                            <p class="card-text"><b>Price: </b>@item?.Price.ToString("c")</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-success" asp-controller="Orders" asp-action="AddToCart" asp-route-id="@item?.Id">
                                    <i class="bi bi-cart-plus"></i>
                                    Add to cart
                                </a>
                                <a class="btn btn-outline-primary float-end" asp-action="Details" asp-route-id="@item?.Id">
                                    <i class="bi bi-eye-fill"></i>
                                    Show details
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
    
